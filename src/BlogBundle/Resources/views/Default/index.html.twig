{% extends "BlogBundle:default:layout.html.twig" %}

{% block title %} Posts{% endblock %}

{% block body %}
    <div class="container">
        {% if posts %}
            <table class="table">
                <tr>
                    <td>
                        Author
                    </td>
                    <td>
                        Title
                    </td>
                    <td>
                        Corps
                    </td>
                </tr>
                {# boucle pour les posts #}
                {% for post in posts %}
                    <tr>
                        <td>
                            <div>
                                <a href="{{ path('blog_post', {id: post.id}) }}">{{ post.author }} </a>
                            </div>
                        </td>
                        <td>
                            <div>
                                {{ post.title }}
                            </div>
                        </td>
                        <td>
                            <div>
                                {{ post.body }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <p>Aucun post pour le moment</p>
            <a class="btn btn-default" href="{{ path('blog_create_post') }}">Cr√©er un post</a>
        {% endif %}
    </div>
{% endblock %}
